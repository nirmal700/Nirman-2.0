<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Primary_light"
    android:orientation="vertical"
    android:padding="3dp">

    <com.ramotion.foldingcell.FoldingCell
        android:id="@+id/folding_cell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/cell_content_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card_team_content"
            android:layout_weight="1"
            app:cardElevation="8dp"
            app:strokeWidth=".5dp"
            app:strokeColor="@color/hintBlack"
            android:layout_marginBottom="15dp"
            android:layout_marginHorizontal="8dp"
            android:layout_margin="10dp"
            android:visibility="visible">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/Primary" />

            <RelativeLayout
                android:id="@+id/expandable_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/my_fav_sans_number"
                            android:text="Team-Lead Name: "
                            android:textColor="#000"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_member1_Name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoSizeTextType="uniform"
                            android:background="@drawable/bg_general_list"
                            android:fontFamily="@font/my_fav_sans_number"
                            android:maxLines="1"
                            android:paddingHorizontal="10dp"
                            android:layout_marginHorizontal="10dp"
                            android:paddingVertical="4dp"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/my_fav_sans_number"
                            android:text="Team-Lead Ph No. : "
                            android:textColor="#000"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_member1_Phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoSizeTextType="uniform"
                            android:background="@drawable/bg_general_list"
                            android:fontFamily="@font/my_fav_sans_number"
                            android:maxLines="1"
                            android:paddingHorizontal="10dp"
                            android:layout_marginHorizontal="10dp"
                            android:paddingVertical="4dp"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/hint_problem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/my_fav_sans_number"
                            android:text="Check Points Cleared : "
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_Problem_Statement"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/bg_general_list"
                            android:fontFamily="@font/my_fav_sans_number"
                            android:maxLines="1"
                            android:paddingHorizontal="10dp"
                            android:layout_marginHorizontal="10dp"
                            android:paddingVertical="4dp"
                            android:text=" lorem "
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/my_fav_sans_number"
                            android:text="Hand Touches : "
                            android:textColor="#000"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_approach"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoSizeTextType="uniform"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/bg_general_list"
                            android:fontFamily="@font/my_fav_sans_number"
                            android:maxLines="10"
                            android:paddingHorizontal="10dp"
                            android:layout_marginHorizontal="10dp"
                            android:paddingVertical="4dp"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/my_fav_sans_number"
                            android:text="Bonus : "
                            android:textColor="#000"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_approach2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoSizeTextType="uniform"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/bg_general_list"
                            android:fontFamily="@font/my_fav_sans_number"
                            android:maxLines="10"
                            android:paddingHorizontal="10dp"
                            android:layout_marginHorizontal="10dp"
                            android:paddingVertical="4dp"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/hint_mark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/my_fav_sans_number"
                            android:text="Time Out Taken : "
                            android:textColor="#000"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_Final_Mark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoSizeTextType="uniform"
                            android:background="@drawable/bg_general_list"
                            android:fontFamily="@font/my_fav_sans_number"
                            android:maxLines="5"
                            android:paddingHorizontal="10dp"
                            android:layout_marginHorizontal="10dp"
                            android:paddingVertical="4dp"
                            android:textColor="#000"
                            android:textSize="20sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/hint_mark2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/my_fav_sans_number"
                            android:text="Check Point Skipped : "
                            android:textColor="#000"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_Final_Mark2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoSizeTextType="uniform"
                            android:background="@drawable/bg_general_list"
                            android:fontFamily="@font/my_fav_sans_number"
                            android:maxLines="5"
                            android:paddingHorizontal="10dp"
                            android:layout_marginHorizontal="10dp"
                            android:paddingVertical="4dp"
                            android:textColor="#000"
                            android:textSize="20sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/hint_mark3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/my_fav_sans_number"
                            android:text="Total Time Taken : "
                            android:textColor="#000"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_Final_Mark3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoSizeTextType="uniform"
                            android:background="@drawable/bg_general_list"
                            android:fontFamily="@font/my_fav_sans_number"
                            android:maxLines="5"
                            android:paddingHorizontal="10dp"
                            android:layout_marginHorizontal="10dp"
                            android:paddingVertical="4dp"
                            android:textColor="#000"
                            android:textSize="20sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/hint_mark4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/my_fav_sans_number"
                            android:text="Total : "
                            android:textColor="#000"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_Final_Mark4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoSizeTextType="uniform"
                            android:background="@drawable/bg_general_list"
                            android:fontFamily="@font/my_fav_sans_number"
                            android:maxLines="5"
                            android:paddingHorizontal="10dp"
                            android:layout_marginHorizontal="10dp"
                            android:paddingVertical="4dp"
                            android:textColor="#000"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">


                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_call"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_gravity="center_horizontal"
                            android:backgroundTint="@color/light_blue"
                            android:text="Call"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            app:cornerRadius="5dp"
                            app:icon="@drawable/ic_call"
                            app:strokeColor="@color/black"
                            app:strokeWidth="1dp" />


                        <ImageView
                            android:id="@+id/btn_whatsapp1"
                            android:layout_width="35dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="50dp"
                            android:layout_marginHorizontal="35dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:contentDescription="@null"
                            android:elevation="3dp"
                            android:backgroundTint="@color/black"
                            android:focusable="true"
                            android:src="@drawable/whatsapp" />

                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/cell_title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card_user"
            android:layout_weight="1"
            app:cardElevation="8dp"
            app:strokeWidth=".5dp"
            app:strokeColor="@color/hintBlack"
            android:layout_marginBottom="15dp"
            android:layout_marginHorizontal="8dp"
            android:padding="10dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent">

                    <TextView
                        android:id="@+id/tv_team"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="@font/my_fav_sans_number"
                        android:text="Team Name :"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_team_Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="@font/my_fav_sans_number"
                        android:text="Team Developers"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent">

                    <TextView
                        android:id="@+id/tv_clg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="@font/my_fav_sans_number"
                        android:text="College Name: "
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_Clg_Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="@font/my_fav_sans_number"
                        android:text="Silicon Institute Of Technology"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent">

                    <TextView
                        android:id="@+id/tv_chekin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="@font/my_fav_sans_number"
                        android:text="Check-in Status:"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_CheckinStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="17dp"
                        android:autoSizeTextType="uniform"
                        android:background="@drawable/bg_booking_not_active"
                        android:padding="2dp"
                        android:text="Not Checked-In"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>
    </com.ramotion.foldingcell.FoldingCell>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Primary"
    android:orientation="vertical"
    tools:context=".Admins.AddNewTeams">

    <ImageView
        android:id="@+id/btn_backToSd"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:contentDescription="@null"
        android:focusable="true"
        android:src="@drawable/ic_back_arrow"
        app:tint="@color/black" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-55dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_add_group" />


    <!--    <View-->
    <!--        android:layout_width="150dp"-->
    <!--        android:layout_height="2dp"-->
    <!--        android:layout_marginTop="-8dp"-->
    <!--        android:layout_gravity="center_horizontal"-->
    <!--        android:background="@color/black"-->
    <!--        android:layout_marginHorizontal="15dp"/>-->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/my_fav_sans_number"
        android:text="@string/add_new_team"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints,SpUsage"
        tools:targetApi="o" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/bg_lower"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_EventType"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="@string/select_the_event"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/black"
                android:layout_margin="10dp"
                app:boxStrokeWidth="1dp"
                app:endIconTint="@color/black"
                app:errorTextColor="@color/black"
                app:hintTextColor="@color/black"
                app:startIconDrawable="@drawable/users_type"
                app:startIconTint="@color/black">

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteEventType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:fontFamily="@font/my_fav_sans_number"
                    android:inputType="none"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    tools:ignore="LabelFor,SpUsage" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_TeamName"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:autoSizeTextType="uniform"
                android:hint="@string/team_name_9"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="1dp"
                app:endIconMode="clear_text"
                app:endIconTint="@color/black"
                android:layout_margin="10dp"
                app:hintTextColor="@color/black"
                app:startIconDrawable="@drawable/ic_group"
                app:startIconTint="@color/black"
                tools:targetApi="o">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/my_fav_sans_number"
                    android:inputType="textCapSentences"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hintBlack"
                    android:textSize="20dp"
                    tools:ignore="SpUsage" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_Problem_Statement"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:autoSizeTextType="uniform"
                android:hint="@string/problem_statement_9"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="1dp"
                app:endIconMode="clear_text"
                app:endIconTint="@color/black"
                app:hintTextColor="@color/black"
                android:layout_margin="10dp"
                app:startIconDrawable="@drawable/ic_bug"
                app:startIconTint="@color/black"
                tools:targetApi="o">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:autoSizeTextType="uniform"
                    android:digits="@string/allowedName"
                    android:fontFamily="@font/my_fav_sans_number"
                    android:inputType="textCapWords"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    tools:ignore="SpUsage"
                    tools:targetApi="o" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_Problem_Approach"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:autoSizeTextType="uniform"
                android:hint="@string/approach_to_problem"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="1dp"
                app:endIconMode="clear_text"
                app:endIconTint="@color/black"
                app:hintTextColor="@color/black"
                android:layout_margin="10dp"
                app:startIconDrawable="@drawable/ic_solution"
                app:startIconTint="@color/black"
                tools:targetApi="o">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:autoSizeTextType="uniform"
                    android:digits="@string/allowedName"
                    android:fontFamily="@font/my_fav_sans_number"
                    android:inputType="textCapWords"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    tools:ignore="SpUsage"
                    tools:targetApi="o" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_CollegeName"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:autoSizeTextType="uniform"
                android:hint="@string/college_name_8"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="1dp"
                app:endIconMode="clear_text"
                app:endIconTint="@color/black"
                app:hintTextColor="@color/black"
                android:layout_margin="10dp"
                app:startIconDrawable="@drawable/ic_school"
                app:startIconTint="@color/black"
                tools:targetApi="o">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:autoSizeTextType="uniform"
                    android:digits="@string/allowedName"
                    android:fontFamily="@font/my_fav_sans_number"
                    android:inputType="textCapWords"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    tools:ignore="SpUsage" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_TeamLeadName"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:autoSizeTextType="uniform"
                android:hint="@string/team_lead_name_9"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="1dp"
                app:endIconMode="clear_text"
                app:endIconTint="@color/black"
                app:hintTextColor="@color/black"
                android:layout_margin="10dp"
                app:startIconDrawable="@drawable/ic_person"
                app:startIconTint="@color/black"
                tools:targetApi="o">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:autoSizeTextType="uniform"
                    android:digits="@string/allowedName"
                    android:fontFamily="@font/my_fav_sans_number"
                    android:inputType="textCapWords"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    tools:ignore="SpUsage" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_TeamLeadphoneNumber"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:autoSizeTextType="uniform"
                android:hint="@string/team_lead_phone"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="1dp"
                app:endIconMode="clear_text"
                app:endIconTint="@color/black"
                android:layout_margin="10dp"
                app:hintTextColor="@color/black"
                app:prefixText="+91"
                app:prefixTextColor="@color/hintBlack"
                app:startIconDrawable="@drawable/ic_phone"
                app:startIconTint="@color/black"
                tools:targetApi="o">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/my_fav_sans_number"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hintBlack"
                    android:textSize="20dp"
                    tools:ignore="SpUsage"
                    tools:targetApi="o" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_Member1Name"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:autoSizeTextType="uniform"
                android:hint="@string/member_1_name"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="1dp"
                app:endIconMode="clear_text"
                app:endIconTint="@color/black"
                app:hintTextColor="@color/black"
                android:layout_margin="10dp"
                app:startIconDrawable="@drawable/ic_person"
                app:startIconTint="@color/black"
                tools:targetApi="o">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:autoSizeTextType="uniform"
                    android:digits="@string/allowedName"
                    android:fontFamily="@font/my_fav_sans_number"
                    android:inputType="textCapWords"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    tools:ignore="SpUsage" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_Member1phoneNumber"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:autoSizeTextType="uniform"
                android:hint="@string/member_1_phone"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="1dp"
                app:endIconMode="clear_text"
                app:endIconTint="@color/black"
                android:layout_margin="10dp"
                app:hintTextColor="@color/black"
                app:prefixText="+91"
                app:prefixTextColor="@color/hintBlack"
                app:startIconDrawable="@drawable/ic_phone"
                app:startIconTint="@color/black"
                tools:targetApi="o">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/my_fav_sans_number"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hintBlack"
                    android:textSize="20dp"
                    tools:ignore="SpUsage"
                    tools:targetApi="o" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_Member2Name"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:autoSizeTextType="uniform"
                android:hint="@string/member_2_name"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="1dp"
                app:endIconMode="clear_text"
                app:endIconTint="@color/black"
                app:hintTextColor="@color/black"
                android:layout_margin="10dp"
                app:startIconDrawable="@drawable/ic_person"
                app:startIconTint="@color/black"
                tools:targetApi="o">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:autoSizeTextType="uniform"
                    android:digits="@string/allowedName"
                    android:fontFamily="@font/my_fav_sans_number"
                    android:inputType="textCapWords"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    tools:ignore="SpUsage" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_Member2phoneNumber"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:autoSizeTextType="uniform"
                android:hint="@string/member_2_phone"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="1dp"
                app:endIconMode="clear_text"
                app:endIconTint="@color/black"
                android:layout_margin="10dp"
                app:hintTextColor="@color/black"
                app:prefixText="+91"
                app:prefixTextColor="@color/hintBlack"
                app:startIconDrawable="@drawable/ic_phone"
                app:startIconTint="@color/black"
                tools:targetApi="o">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/my_fav_sans_number"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hintBlack"
                    android:textSize="20dp"
                    tools:ignore="SpUsage"
                    tools:targetApi="o" />

            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:autoSizeTextType="uniform"
                android:layout_marginStart="10dp"
                android:text="@string/choose_the_size_of_the_team"
                android:fontFamily="@font/dangrek"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="SpUsage"
                tools:targetApi="o" />

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:autoSizeTextType="uniform"
                android:orientation="horizontal"
                tools:targetApi="o">

                <RadioButton
                    android:id="@+id/single"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radio_selector"
                    android:button="@color/transparent"
                    android:buttonTint="@color/Primary"
                    android:elevation="8dp"
                    android:text="@string/_3"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

                <RadioButton
                    android:id="@+id/duo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/radio_selector"
                    android:button="@color/transparent"
                    android:buttonTint="@color/Primary"
                    android:text="@string/_4"
                    android:textAlignment="center"
                    android:textColor="@color/black" />


            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/black" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_Member3Name"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:autoSizeTextType="uniform"
                android:hint="@string/member_3_name"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="1dp"
                app:endIconMode="clear_text"
                app:endIconTint="@color/black"
                app:hintTextColor="@color/black"
                android:layout_margin="10dp"
                app:startIconDrawable="@drawable/ic_person"
                app:startIconTint="@color/black"
                tools:targetApi="o">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:autoSizeTextType="uniform"
                    android:digits="@string/allowedName"
                    android:fontFamily="@font/my_fav_sans_number"
                    android:inputType="textCapWords"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    tools:ignore="SpUsage" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_Member3phoneNumber"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:autoSizeTextType="uniform"
                android:hint="@string/member_3_phone"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="1dp"
                app:endIconMode="clear_text"
                app:endIconTint="@color/black"
                android:layout_margin="10dp"
                app:hintTextColor="@color/black"
                app:prefixText="+91"
                app:prefixTextColor="@color/hintBlack"
                app:startIconDrawable="@drawable/ic_phone"
                app:startIconTint="@color/black"
                tools:targetApi="o">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/my_fav_sans_number"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hintBlack"
                    android:textSize="20dp"
                    tools:ignore="SpUsage"
                    tools:targetApi="o" />

            </com.google.android.material.textfield.TextInputLayout>






            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_AddTeam"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/Primary"
                android:fontFamily="@font/astronaut"
                android:gravity="center"
                android:text="@string/add_the_team"
                android:textColor="@color/white"
                android:textSize="25dp"
                app:cornerRadius="5dp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"
                tools:ignore="SpUsage" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="35dp"
                android:background="@color/black" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>


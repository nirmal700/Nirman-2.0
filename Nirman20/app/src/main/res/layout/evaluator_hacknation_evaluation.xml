<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Evaluators.HackNationEvaluation"
    android:background="@color/Primary"
    android:transitionName="transition_edit_shop_profile"
    tools:targetApi="o">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_backToCd"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:src="@drawable/ic_back_arrow"
            app:tint="@color/black"
            android:contentDescription="@null"
            android:focusable="true"
            android:layout_marginStart="20dp"
            android:transitionName="transition_shop_dashboard"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_shop_details"
            android:layout_marginTop="-55dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@null" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_shopName"
            android:textAllCaps="true"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/astronaut"
            android:layout_marginHorizontal="20dp"
            android:textSize="30sp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="@string/event"
                android:autoSizeTextType="uniform"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp" />

            <TextView
                android:id="@+id/tv_shopId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:autoSizeTextType="uniform"
                android:layout_marginBottom="10dp"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginEnd="20dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/bg_lower"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/evaluate_current_project_0"
                android:autoSizeTextType="uniform"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/Primary"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp" />

            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:autoSizeTextType="uniform"
                android:text="@string/required_0"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginStart="10dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_teamName"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="@string/team_name_0"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="1dp"
                app:endIconMode="clear_text"
                app:endIconTint="@color/black"
                app:expandedHintEnabled="false"
                app:hintTextColor="@color/black"
                app:startIconDrawable="@drawable/users_type"
                app:startIconTint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:hint="@string/enter_team_name_0"
                    android:inputType="textCapCharacters"
                    android:autoSizeTextType="uniform"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hintBlack"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_collegeName"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:hint="@string/college_name_0"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="1dp"
                app:endIconMode="clear_text"
                app:endIconTint="@color/black"
                app:expandedHintEnabled="false"
                app:hintTextColor="@color/black"
                app:startIconDrawable="@drawable/ic_shop"
                app:startIconTint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:hint="@string/enter_college_name_0"
                    android:inputType="textCapSentences"
                    android:autoSizeTextType="uniform"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hintBlack"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:autoSizeTextType="uniform"
                    android:text="@string/project_detail_s_0"
                    android:textColor="@color/Primary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="264dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="33dp"
                    android:background="@color/Primary" />

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_Problem_Statement"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="@string/problem_statement_0"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="1dp"
                app:endIconMode="clear_text"
                app:endIconTint="@color/black"
                app:expandedHintEnabled="false"
                app:hintTextColor="@color/black"
                app:startIconDrawable="@drawable/ic_user"
                app:startIconTint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:hint="@string/problem_statement_8"
                    android:inputType="textCapSentences"
                    android:autoSizeTextType="uniform"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hintBlack"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>




            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_description"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="@string/description"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="1dp"
                app:endIconMode="clear_text"
                app:endIconTint="@color/black"
                app:expandedHintEnabled="false"
                app:hintTextColor="@color/black"
                app:startIconDrawable="@drawable/ic_license"
                app:startIconTint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="225dp"
                    android:hint="@string/suggested_approach"
                    android:inputType="textMultiLine"
                    android:textColor="@color/black"
                    android:autoSizeTextType="uniform"
                    android:textColorHint="@color/hintBlack"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:autoSizeTextType="uniform"
                    android:text="@string/marking_s_0"
                    android:textColor="@color/Primary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="264dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="33dp"
                    android:background="@color/Primary" />

            </LinearLayout>
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/how_technically_impressive_was_the_hack_was_the_technical_problem_the_team_tackled_difficult_did_it_use_a_particularly_clever_technique_or_did_it_use_many_different_components_did_the_technology_involved_make_you_go_wow"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>

                <com.ramotion.fluidslider.FluidSlider
                    android:id="@+id/fluidSlider1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:elevation="2dp"
                    app:size="small"
                    app:duration="400"/>
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/did_the_team_put_thought_into_the_user_experience_how_well_designed_is_the_interface_for_a_website_this_might_be_about_how_beautiful_the_css_or_graphics_are_for_a_hardware_project_it_might_be_more_about_how_good_the_human_computer_interaction_is_e_g_is_it_easy_to_use_or_does_it_use_a_cool_interface"
                android:textSize="16sp"
                android:textColor="@color/black"/>

            <com.ramotion.fluidslider.FluidSlider
                android:id="@+id/fluidSlider2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:elevation="2dp"
                app:size="small"
                app:duration="400"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/does_the_hack_work_did_the_team_achieve_everything_they_wanted"
                android:textSize="16sp"
                android:textColor="@color/black"/>

            <com.ramotion.fluidslider.FluidSlider
                android:id="@+id/fluidSlider3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:elevation="2dp"
                app:size="small"
                app:duration="400"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/did_the_team_stretch_themselves_did_they_try_to_learn_something_new_what_kind_of_projects_have_they_worked_on_before"
                android:textSize="16sp"
                android:textColor="@color/black"/>

            <com.ramotion.fluidslider.FluidSlider
                android:id="@+id/fluidSlider4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:elevation="2dp"
                app:size="small"
                app:duration="400"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:autoSizeTextType="uniform"
                    android:text="@string/suggestion_7"
                    android:textColor="@color/Primary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="264dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="33dp"
                    android:background="@color/Primary" />

            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_suggestion"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="@string/suggestion_8"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="1dp"
                app:endIconMode="clear_text"
                app:endIconTint="@color/black"
                app:expandedHintEnabled="false"
                app:hintTextColor="@color/black"
                app:startIconDrawable="@drawable/ic_license"
                app:startIconTint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:hint="@string/suggestion_to_the_team_8"
                    android:inputType="textMultiLine"
                    android:textColor="@color/black"
                    android:autoSizeTextType="uniform"
                    android:textColorHint="@color/hintBlack"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="20dp"
                android:text="@string/submit_6"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/astronaut"
                android:textStyle="bold"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
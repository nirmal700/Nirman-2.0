<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Users.ReviewTeam"
android:background="@color/Primary"
android:transitionName="transition_edit_shop_profile"
tools:targetApi="o">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/one"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:src="@drawable/ic_back_arrow"
        app:tint="@color/black"
        android:contentDescription="@null"
        android:focusable="true"
        android:layout_marginStart="20dp"
        android:transitionName="transition_shop_dashboard"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_review"
        android:layout_marginTop="-55dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@null" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/review_co_participants"
            android:autoSizeTextType="uniform"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:targetApi="o" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/bg_lower"
        android:orientation="vertical"
        android:layout_marginTop="45dp"
        android:padding="10dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/et_teamName"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="@string/team_name_2"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/black"
            app:boxStrokeWidth="1dp"
            app:endIconMode="clear_text"
            app:endIconTint="@color/black"
            app:expandedHintEnabled="false"
            app:hintTextColor="@color/black"
            app:startIconDrawable="@drawable/users_type"
            app:startIconTint="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="@string/enter_team_name"
                android:inputType="textCapCharacters"
                android:autoSizeTextType="uniform"
                android:textColor="@color/black"
                android:textColorHint="@color/hintBlack"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/how_impressive_is_the_problem_statement_choosen_1"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <com.ramotion.fluidslider.FluidSlider
            android:id="@+id/fluidSlider1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:elevation="2dp"
            app:size="small"
            app:duration="400"/>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/is_the_solution_feasible_to_implement_3"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <com.ramotion.fluidslider.FluidSlider
            android:id="@+id/fluidSlider2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:elevation="2dp"
            app:size="small"
            app:duration="400"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/is_the_idea_ready_for_market_did_the_team_achieve_the_required_business_model_1"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <com.ramotion.fluidslider.FluidSlider
            android:id="@+id/fluidSlider3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:elevation="2dp"
            app:size="small"
            app:duration="400"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:autoSizeTextType="uniform"
                android:text="@string/suggestion_2"
                android:textColor="@color/Primary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:layout_width="264dp"
                android:layout_height="2dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="33dp"
                android:background="@color/Primary" />

        </LinearLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/et_suggestion"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="@string/suggestion_0"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/black"
            app:boxStrokeWidth="1dp"
            app:endIconMode="clear_text"
            app:endIconTint="@color/black"
            app:expandedHintEnabled="false"
            app:hintTextColor="@color/black"
            app:startIconDrawable="@drawable/ic_license"
            app:startIconTint="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:hint="@string/suggestion_to_the_team_5"
                android:inputType="textMultiLine"
                android:textColor="@color/black"
                android:autoSizeTextType="uniform"
                android:textColorHint="@color/hintBlack"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="20dp"
            android:text="@string/submit_4"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="@font/astronaut"
            android:textStyle="bold"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp" />

    </LinearLayout>

</LinearLayout>

</ScrollView>
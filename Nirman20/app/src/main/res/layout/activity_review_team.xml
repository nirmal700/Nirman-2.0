<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Users.ReviewTeam"
android:background="@color/Primary"
android:transitionName="transition_edit_shop_profile"
tools:targetApi="o">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/one"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:src="@drawable/ic_back_arrow"
        app:tint="@color/black"
        android:contentDescription="@null"
        android:focusable="true"
        android:layout_marginStart="20dp"
        android:transitionName="transition_shop_dashboard"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_review"
        android:layout_marginTop="-55dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@null" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/two"
        android:textAllCaps="true"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/astronaut"
        android:layout_marginHorizontal="20dp"
        android:textSize="30sp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Review"
            android:autoSizeTextType="uniform"
            android:textColor="@color/white"
            android:layout_marginLeft="135dp"
            android:layout_marginVertical="25dp"
            android:layout_gravity="center_horizontal"
            android:textSize="35sp"
            android:fontFamily="@font/astronaut"
            tools:targetApi="o" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/bg_lower"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Review"
            android:autoSizeTextType="uniform"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textColor="@color/Primary"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/four"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Team Name"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/black"
            app:boxStrokeWidth="1dp"
            app:endIconMode="clear_text"
            app:endIconTint="@color/black"
            app:expandedHintEnabled="false"
            app:hintTextColor="@color/black"
            app:startIconDrawable="@drawable/users_type"
            app:startIconTint="@color/black">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/five"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Team Name"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="1dp"
                app:endIconMode="clear_text"
                app:endIconTint="@color/black"
                app:expandedHintEnabled="false"
                app:hintTextColor="@color/black"
                app:startIconDrawable="@drawable/users_type"
                app:startIconTint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:hint="Give Review"
                    android:inputType="textCapSentences"
                    android:autoSizeTextType="uniform"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hintBlack"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Enter Team Name"
                android:inputType="textCapCharacters"
                android:autoSizeTextType="uniform"
                android:textColor="@color/black"
                android:textColorHint="@color/hintBlack"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Innovation"
            android:inputType="textCapCharacters"
            android:autoSizeTextType="uniform"
            android:textColor="@color/black"
            android:textColorHint="@color/hintBlack"
            android:textSize="20sp" />
        <com.ramotion.fluidslider.FluidSlider
                android:id="@+id/fluidSliderone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:elevation="2dp"
                app:size="small"
                app:duration="400"/>
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Approach to the problem"
            android:inputType="textCapCharacters"
            android:autoSizeTextType="uniform"
            android:textColor="@color/black"
            android:textColorHint="@color/hintBlack"
            android:textSize="20sp" />
        <com.ramotion.fluidslider.FluidSlider
            android:id="@+id/fluidSlidertwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:elevation="2dp"
            app:size="small"
            app:duration="400"/>
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Technical Knowledge"
            android:inputType="textCapCharacters"
            android:autoSizeTextType="uniform"
            android:textColor="@color/black"
            android:textColorHint="@color/hintBlack"
            android:textSize="20sp" />
        <com.ramotion.fluidslider.FluidSlider
            android:id="@+id/fluidSliderthree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:elevation="2dp"
            app:size="small"
            app:duration="400"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="20dp"
            android:text="Submit"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="@font/astronaut"
            android:textStyle="bold"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp" />


    </LinearLayout>

</LinearLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Users.UserQrCode"
    android:background="@color/Primary">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_backToCd"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="25dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:src="@drawable/ic_back_arrow"
            app:tint="@color/black"
            android:focusable="true"
            android:layout_marginStart="25dp"
            android:contentDescription="@null"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-55dp"
            android:src="@drawable/ic_qr_code"
            android:contentDescription="@null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your QR Code"
            android:autoSizeTextType="uniform"
            android:textColor="@color/white"
            android:layout_marginVertical="25dp"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:fontFamily="@font/astronaut"
            tools:targetApi="o" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_lower"
            android:padding="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/qr_output"
                android:layout_marginTop="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/mTeam_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/dangrek"
                android:gravity="center_horizontal"
                android:text=""
                android:textColor="@color/Primary"
                android:textSize="35dp"
                android:textStyle="bold"
                tools:ignore="SpUsage"
                tools:targetApi="o" />



        </LinearLayout>


    </LinearLayout>



</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_centerVertical="true"
    android:background="@drawable/bg_primary"
    android:orientation="vertical"
    android:paddingStart="15dp"
    android:paddingTop="15dp"
    android:paddingEnd="10dp"
    tools:targetApi="o">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_nirman"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-10dp"
            android:src="@drawable/nirmanlogo"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/RiseWithTech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_nirman"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/astronaut"
            android:text="Rise With Technology"
            android:textColor="@color/white"
            android:textSize="15sp" />


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/splash_robo"
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginEnd="-20dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="robot_playing.json"
            app:lottie_loop="true" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/RiseWithTech"
            android:layout_alignStart="@+id/img_nirman"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/my_fav_sans_number"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextClock
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_date"
            android:layout_alignStart="@+id/img_nirman"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/my_fav_sans_number"
            android:textColor="@color/white"
            android:textSize="25sp"
            tools:targetApi="o" />


    </RelativeLayout>


</LinearLayout>
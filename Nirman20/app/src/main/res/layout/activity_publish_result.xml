<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Admins.PublishResult"
        android:background="@color/Primary"
        android:transitionName="transition_edit_shop_profile"
        tools:targetApi="o">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_backToSd"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:src="@drawable/ic_back_arrow"
                app:tint="@color/black"
                android:contentDescription="@null"
                android:focusable="true"
                android:layout_marginStart="20dp"
                android:transitionName="transition_shop_dashboard"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_podium"
                android:layout_marginTop="-55dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@null" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_shopName"
                android:textAllCaps="true"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/astronaut"
                android:layout_marginHorizontal="20dp"
                android:textSize="30sp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Evaluation"
                    android:autoSizeTextType="uniform"
                    android:textColor="@color/white"
                    android:layout_marginLeft="135dp"
                    android:layout_marginVertical="25dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="35sp"
                    android:fontFamily="@font/astronaut"
                    tools:targetApi="o" />

                <TextView
                    android:id="@+id/tv_shopId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:autoSizeTextType="uniform"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="20dp"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="20dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/bg_lower"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Result"
                    android:autoSizeTextType="uniform"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/Primary"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp" />



                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/autoEvent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Select Your Event"
                    android:textColorHint="@color/black"
                    app:boxStrokeColor="@color/black"
                    app:boxStrokeWidth="2dp"
                    app:boxStrokeWidthFocused="2dp"
                    app:endIconTint="@color/black"
                    app:errorTextColor="@color/black"
                    app:hintTextColor="@color/black"
                    app:startIconDrawable="@drawable/ic_user"
                    app:startIconTint="@color/black">

                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteResult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/black"
                        android:fontFamily="@font/my_fav_sans_number"
                        android:inputType="none"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        tools:ignore="LabelFor,SpUsage" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/autoResult"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:hint="Select Your Round"
                    android:textColorHint="@color/black"
                    app:boxStrokeColor="@color/black"
                    app:boxStrokeWidth="2dp"
                    app:boxStrokeWidthFocused="2dp"
                    app:endIconTint="@color/black"
                    app:errorTextColor="@color/black"
                    app:hintTextColor="@color/black"
                    app:startIconDrawable="@drawable/ic_user"
                    app:startIconTint="@color/black">

                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteRound"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/black"
                        android:fontFamily="@font/my_fav_sans_number"
                        android:inputType="none"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        tools:ignore="LabelFor,SpUsage" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_publish"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="20dp"
                    android:text="Publish Result"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/astronaut"
                    android:textStyle="bold"
                    app:strokeColor="@color/black"
                    app:strokeWidth="1dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>